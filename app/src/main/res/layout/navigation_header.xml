<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="@dimen/drawer_header_icon_width"
        android:layout_height="@dimen/drawer_header_icon_width"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_icon"
        android:layout_marginTop="@dimen/drawer_header_icon_margin"
        android:layout_centerInParent="true"
        android:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/navigation_header_divider"></View>


</RelativeLayout>
